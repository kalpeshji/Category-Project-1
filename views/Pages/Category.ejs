<%- include('../partials/Header.ejs') -%>
    <div class="page-wrapper mt-80 p-4">

        <h2 class="text-light mb-4">Add Category</h2>
        <form method="post" action="/category">
            <input type="text" name="name" placeholder="Category Name" class="form-control mb-3">
            <button type="submit" class="btns">ADD</button>
        </form>
        <table class="table table-bordered table-hover table-responsive table-striped">
           <h4 class="text-light mt-5 mb-3">Already Exist Categories</h4>
            <% data.forEach((data, i)=> { %>
                <tr>
                    <td>
                        <%= data.name %>
                    </td>
                </tr>
                <% }) %>
        </table>
    </div>

    <%- include('../partials/Footer.ejs') -%>